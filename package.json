{
  "name": "globwatcher",
  "version": "1.4.0",
  "description": "watch a set of files for changes (including create/delete) by glob patterns",
  "keywords": [
    "watch"
  ],
  "author": "Robey Pointer <robeypointer@gmail.com>",
  "homepage": "https://github.com/robey/globwatcher",
  "repository": {
    "type": "git",
    "url": "git://github.com/robey/globwatcher.git"
  },
  "licenses": [
    {
      "type": "Apache License 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.txt"
    }
  ],
  "scripts": {
    "prepublish": "6to5 --source-maps --out-dir lib src && 6to5 --source-maps --out-dir test/lib test/src",
    "build": "./node_modules/.bin/plz build",
    "testx": "./node_modules/.bin/plz test -v --color",
    "test": "mocha -R spec --colors test/lib"
  },
  "dependencies": {
    "bluebird": "*",
    "glob": "*",
    "lodash": "*",
    "minimatch": "*"
  },
  "devDependencies": {
    "6to5": "*",
    "coffee-script": "^1.7",
    "mocha": "*",
    "mocha-sprinkles": "*",
    "plz": "^2.0.3",
    "shelljs": "*",
    "should": "*",
    "source-map-support": "*",
    "touch": "*"
  },
  "main": "./lib/globwatcher",
  "files": [
    "build.plz",
    "lib",
    "test"
  ]
}
